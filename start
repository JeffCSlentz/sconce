#!/bin/bash
# Start the sconce system service and follow logs.

# Check if running with sudo/root privileges
if [ "$EUID" -ne 0 ]; then
   echo "Error: This script requires sudo privileges to start the service."
   echo "Please run with: sudo $0"
   exit 1
fi

SERVICE_NAME="sconce"

echo "Starting ${SERVICE_NAME}.service..."
systemctl start --no-block "${SERVICE_NAME}.service"
echo "Attempting to follow logs (Ctrl+C to stop following, service keeps running):"

# Use journalctl to follow the logs for the specific service unit
journalctl -f -u "${SERVICE_NAME}.service"